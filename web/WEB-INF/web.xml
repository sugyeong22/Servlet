<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>com.sudal.hello.HelloController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ex01</servlet-name>
        <servlet-class>com.sudal._01_servlet.ex.Ex01Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ex01</servlet-name>
        <url-pattern>/_01_servlet/ex/</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>test01</servlet-name>
        <servlet-class>com.sudal._01_servlet.test.Test01Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>test01</servlet-name>
        <url-pattern>/_01_servlet/test/</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>test02</servlet-name>
        <servlet-class>com.sudal._01_servlet.test.Test02Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>test02</servlet-name>
        <url-pattern>/_01_servlet/test/test02</url-pattern>
    </servlet-mapping>

</web-app>